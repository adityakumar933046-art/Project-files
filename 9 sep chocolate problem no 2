def choco_counting():
    n= int(input("Enter your value of n:"))
    if n%2==0:
        for i in range (n,3*n, 2):
            print("Even number of chocopiles in starting row to Ending:", i)
    else:
        for i in range (n,3*n, 2):
            print("Odd number of chocopiles in starting row to Ending:", i)
choco_counting()
